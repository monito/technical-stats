{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "outDir": "lib",
        "preserveConstEnums": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2019"
    },
    "include": [
        "cli/**/*",
        "runner/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}